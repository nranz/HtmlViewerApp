@{
    ViewData["Title"] = "Upload HTML File";
}

<h2>Upload HTML File</h2>

@if (TempData["Error"] != null)
{
    <div style="color: red;">@TempData["Error"]</div>
}

<form asp-controller="Upload" asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <input type="file" name="htmlFile" accept=".html" />
    <button type="submit">Upload</button>
</form>
